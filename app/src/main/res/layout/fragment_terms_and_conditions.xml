<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:clickable="true"
    android:focusable="true"
    tools:context=".navigationview.termsandconditions.TermsAndConditionsFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:layout_width="@dimen/margin_200dp"
            android:layout_height="@dimen/margin_50dp"
            android:src="@drawable/tagslogo"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/logo"/>

        <TextView
            android:layout_width="@dimen/margin_0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="@dimen/margin_12dp"
            android:layout_marginLeft="@dimen/margin_12dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/logo"
            app:layout_constraintTop_toBottomOf="@id/logo"
            android:id="@+id/partner"
            android:textStyle="bold"
            android:text="Partner"
            android:textColor="@color/quantum_pink400"
            android:textSize="@dimen/textsize_14sp" />

        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:id="@+id/terms"
        android:layout_marginTop="@dimen/margin_30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:textSize="@dimen/textsize_24sp"
        android:textColor="@color/quantum_grey900" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/terms"
        android:gravity="fill_horizontal"
        android:id="@+id/tv_intro"
        app:layout_constraintStart_toEndOf="@id/terms"
        android:layout_marginTop="@dimen/margin_15dp"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/quantum_grey600"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generative Modeling Review"
            android:id="@+id/generative"
            android:layout_marginTop="@dimen/margin_20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_intro"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:textSize="@dimen/textsize_16sp"
            android:textColor="@color/quantum_grey800" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/generative"
            android:gravity="fill_horizontal"
            android:id="@+id/tv_generative"
            android:layout_marginTop="@dimen/margin_15dp"
            android:paddingLeft="@dimen/margin_16dp"
            android:textSize="@dimen/textsize_12sp"
            android:paddingRight="@dimen/margin_16dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/quantum_grey600"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Variational AutoEncoders"
            android:id="@+id/autoencoders"
            android:layout_marginTop="@dimen/margin_30dp"
            app:layout_constraintTop_toBottomOf="@id/tv_generative"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:textSize="@dimen/textsize_16sp"
            android:textColor="@color/quantum_grey800" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/autoencoders"
            android:gravity="fill_horizontal"
            android:id="@+id/tv_autoencoders"
            android:layout_marginTop="@dimen/margin_15dp"
            android:textSize="@dimen/textsize_12sp"
            android:paddingLeft="@dimen/margin_16dp"
            android:paddingRight="@dimen/margin_16dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/quantum_grey600"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>